(executable
 ((name test_btc)
  (modules (Test_btc))
  (libraries (alcotest ledgerwallet-btc))))

(executable
 ((name test_ssh_agent)
  (modules (Test_ssh_agent))
  (libraries (hex alcotest ledgerwallet-ssh-agent))))

(alias
 ((name    runtest-btc)
  (deps    (test_btc.exe))
  (action  (run ${<}))))

(alias
 ((name    runtest)
  (deps    (test_ssh_agent.exe))
  (action  (run ${<}))))
